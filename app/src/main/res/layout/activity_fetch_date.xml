<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:background="@android:color/transparent"
    android:id="@+id/fetchDateLayout">

    <ImageView
        android:id="@+id/leftSwipe"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/_20sdp"
        android:src="@drawable/left_swipe"
        android:padding="@dimen/_2sdp"
        android:clickable="true"
        android:layout_height="@dimen/_20sdp" />

    <android.support.v7.widget.RecyclerView
        android:orientation="horizontal"
        app:reverseLayout="true"
        android:id="@+id/dateRecyclerView"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_toRightOf="@+id/leftSwipe"
        android:layout_toLeftOf="@+id/rightSwipe"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/rightSwipe"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/right_swipe"
        android:layout_marginLeft="@dimen/_2sdp"
        android:padding="@dimen/_2sdp"
        android:layout_width="@dimen/_20sdp"
        android:clickable="true"
        android:layout_height="@dimen/_20sdp" />

</RelativeLayout>
