<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="vertical"
        android:clickable="true"
        android:id="@+id/layout4"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_margin="1px"
            android:background="@drawable/btn_border_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/innerlayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1px"
                android:orientation="horizontal"
                android:layout_toLeftOf="@+id/forwardImageView"
                >

                <TextView
                    android:id="@+id/first"
                    android:background="@drawable/circle_text_blue"
                    android:text="L"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/_6sdp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/lab_test"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/viewMoreImageView4"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/drop_down"
                android:layout_height="@dimen/_6sdp"
                />
        </RelativeLayout>


        <ImageView
            android:id="@+id/image4"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="@dimen/_140sdp"
            android:src="@drawable/sercices_samir_assab"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="LOREM IPSUM IS SIMPLY A DUMMY TEXT OF THE PRINTING AND TYPESETTING INDUSTRY.LOREM IPSUM HAS BEEN THE STANDARD DUMMY TEXT EVER SINCE 1500S.WHEN AN UNKNOWN PRINTER TOOK A GALLERY OF TYPE AND SCRAMBLED IT TO MAKE A TYPE SPECIMEN BOOK"/>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>