<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayout"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/orange"
                    android:text="@string/gallery_lc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/strip"
        android:background="@drawable/strip"
        android:layout_below="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_4sdp" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/strip"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/galleryPic"

            android:scaleType="fitXY"
            android:src="@drawable/facilities_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp" />

        <ImageView
            android:id="@+id/lSwipe"
            android:clickable="true"
            android:padding="@dimen/_5sdp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/left_swipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />

       

        <ImageView
            android:id="@+id/rSwipe"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/right_swipe"
            android:padding="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/layout"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/detailsTextView"

                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/white"
                android:textColor="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_20sdp"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:paddingRight="@dimen/_20sdp"
                android:text="The team at all the clinics are highly qualified and experienced and have a success rate in helping couples start a family.The clinics are fitted with..."
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_15sdp"/>



            <GridView
                android:visibility="gone"
                android:id="@+id/galleryGridView"
                android:layout_below="@+id/detailsTextView"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:numColumns="2"
                android:padding="@dimen/_5sdp"
                android:columnWidth="@dimen/_160sdp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:layout_height="wrap_content">

            </GridView>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_below="@+id/detailsTextView"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/samir_abbas_hospital_1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_height="@dimen/_90sdp" />

                <ImageView
                    android:src="@drawable/samir_abbas_hospital_2"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:paddingTop="@dimen/_6sdp"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/_3sdp"
                    android:layout_height="@dimen/_90sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/layout1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/samir_abbas_hospital_3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_height="@dimen/_90sdp" />

                <ImageView
                    android:src="@drawable/samir_abbas_hospital_3"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:paddingTop="@dimen/_6sdp"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/_3sdp"
                    android:layout_height="@dimen/_90sdp" />


            </LinearLayout>



        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>
    


</RelativeLayout>
